<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title><%= @title %></title>
        <%= stylesheet_link_tag 'main', :cache => true %>
        <%= javascript_include_tag :defaults %>
    </head>
    <body>
        <div id="whole_page">
            <div id="header">
                <%= APPLICATION_NAME %>
            </div>
            <div id="nav">
                <span style="float: right"><% if logged_in? -%>
					<%= nav_link "Add User", :user, :register %> |
                    <%= nav_link "Show", :user, :show %> |
                    <%= nav_link "Logout", :user, :logout %>
                    <% else %>
					<%= nav_link "Login", :user, :login %>
                    <% end -%>
                </span>
                <% if logged_in? -%>
                <%= nav_link "Home", :user, :index %>
                <% else %>
                <%= nav_link "Home", :main, :index %>
                <% end -%>
                | <%= nav_link "About", :main, :about %>
                | <%= nav_link "FAQ", :main, :faq %>
            </div>
            <div id="content">
                <% if flash[:notice] %>
                <div id="notice">
                    <%= flash[:notice] %>
                </div>
                <% end %>
                <%= @content_for_layout %>
            </div>
        </div>
    </body>
</html>
