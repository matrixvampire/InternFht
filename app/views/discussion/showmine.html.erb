<% if is_student?%>
	<div align="right"><%= nav_link "New Discussion", :discussion, :create %> | <%= nav_link "My Folder", :discussion, :showmine %></div>
<% end %>
<hr/>

<p><i>Click the title to edit your previous discussion</i></p>
<% if !@discussions.nil? %>
        <% @discussions.each do |discussion| %>
		<% content_detail = ContentVersion.find(discussion.content.latest_version_id) %>
			<% if content_detail.contentstatus == CONTENT_STATUS_APPROVED%>
				<ul>
					<li>
						<%= link_to content_detail.title, :action => :edit, :id => content_detail.content_id%>&nbsp;&nbsp;&nbsp;&nbsp;
						<%= h discussion.content.creationdate %>
						<%= link_to "Delete", :action => :delete, :id => content_detail.content_id%>
					</li>
				</ul>
			<% end %>
        <% end %>
<% end %>
