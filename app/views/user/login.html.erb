<h1>Log in</h1>
<% form_for :user do |form| %>
<fieldset>
    <legend>
        Log in details
    </legend>
    <div class="form_row">
        <%= form.label :username, "Username:" %>
        <%= form.text_field :username, :size => 20, :maxlength => 20 %>
    </div>
    <div class="form_row">
        <%= form.label :password, "Password:" %>
        <%= form.password_field :password, :size => 20, :maxlength => 20 %>
    </div>
    <div class="form_row">
        <%= form.submit "Log in" %>
    </div>
</fieldset>
<% end %>
